<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>display CRUD</title>
    <style>
        table,
        th,
        td {
            border: 1px solid black;
            border-collapse: collapse;
        }

        .btn-edit {
            margin: 10px 20px;
        }
    </style>
</head>

<body>
    <h2>A basic HTML table</h2>

    <table style="width:100%">
        <tr>
            <th>email</th>
            <th>firstName</th>
            <th>lastName</th>
            <th>address</th>
            <th>action</th>
        </tr>


        <% for(let i=0; i < dataTable.length; i++) { %>
            <tr>
                <td>
                    <%= dataTable[i].email %>
                </td>
                <td>
                    <%= dataTable[i].firstName %>
                </td>
                <td>
                    <%= dataTable[i].lastName %>
                </td>
                <td>
                    <%= dataTable[i].address %>
                </td>

                <td>
                    <a href="/edit-crud?id=<%= dataTable[i].id%>" class="btn-edit">edit</a>
                    <a href="/delete-crud?id=<%= dataTable[i].id%>" class="btn-delete">delete</a>
                </td>
            </tr>
            <% } %>
    </table>
</body>

</html>